{
  "name": "@cher-ami/utils",
  "version": "1.4.0",
  "description": "Browser and node utils library",
  "author": "Willy Brauner",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/cher-ami/utils.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
