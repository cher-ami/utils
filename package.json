  "devDependencies": {
    "@types/node": "^20.5.7",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3",
    "jsdom": "^22.1.0"
  },
  "prettier": {
    "semi": false
